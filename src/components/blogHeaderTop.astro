---
export interface props {
  authorName: string;
  portfolioLink: string;
  dribbbleLink: string;
  githubLink: string;
  IgLink: string;
  mainBlogLink: string;
}
const {
  authorName,
  portfolioLink,
  dribbbleLink,
  githubLink,
  IgLink,
  mainBlogLink,
} = Astro.props;
